<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="URL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtURL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <EditText
        android:id="@+id/edtURL"
        android:layout_width="301dp"
        android:layout_height="92dp"
        android:ems="10"
        android:inputType="text"
        android:text="http://nexo.carm.es/nexo/archivos/recursos/opendata/json/Campings.json"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edtResultado"
        android:layout_width="321dp"
        android:layout_height="256dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/edtURL"
        tools:layout_editor_absoluteX="47dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text="Consumir"
        app:layout_constraintTop_toBottomOf="@+id/edtResultado"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text="Parsear"
        app:layout_constraintTop_toBottomOf="@+id/edtResultado"
        tools:layout_editor_absoluteX="221dp" />

</android.support.constraint.ConstraintLayout>